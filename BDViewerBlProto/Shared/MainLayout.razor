        @Body
    </section>
    
    <!--
    -- ------------------------------------------------------------------------------------------------ --
    -- Footer row                                                                                       --
    -- ------------------------------------------------------------------------------------------------ --
    -->
    <footer class="apl-slayout-foot" style="padding:10px; background-color: var(--raaf-rndel)">
        <div class="flex-fill"><p style="text-align:center">A more stimulating experience can be achieved talking to a brown paper bag than partaking in web development</p></div>
    </footer>

