@inherits LayoutComponentBase

    <!--
    -- ------------------------------------------------------------------------------------------------ --
    -- Header row                                                                                       --
    -- ------------------------------------------------------------------------------------------------ --
    -->
    <header class="apl-slayout-head" style="padding:10px; background-color: var(--raaf-rndel)">
        <div class="display-2-atitle flex-fill" style="text-align:center">Draft Viewer Theming Mini App. Site</div>
    </header>

    <!--
    -- ------------------------------------------------------------------------------------------------ --
    -- Main Content row                                                                                       --
    -- ------------------------------------------------------------------------------------------------ --
    -->
