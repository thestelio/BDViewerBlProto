<!-- ------------------------------------------------------------------------------------------------ --
  -- The cotainer for this compoent is the div class app in index.html                                --
  -- ------------------------------------------------------------------------------------------------ -->
@inherits LayoutComponentBase
@using System.Net.Http
@inject HttpClient http
@inject Services.ApplicationData ApplicationData
@inject Services.CourseData CourseData

<MudThemeProvider  />
<MudDialogProvider />
<MudSnackbarProvider />

<!--
-- ------------------------------------------------------------------------------------------------ --
-- Header row                 <CascadingValue Value="this">                                         --
-- ------------------------------------------------------------------------------------------------ --
-->
<header class="apl-slayout-head">
    <NavMenu EnableGlossary="true"
             EnableBrand="true" />
</header>

<!--
-- ------------------------------------------------------------------------------------------------ --
-- Main Content row                                                                                 --
-- ------------------------------------------------------------------------------------------------ --
-->
<section class="apl-slayout-main" style="overflow-y:auto">
    @Body
</section>

<!--
-- ------------------------------------------------------------------------------------------------ --
-- Footer row                                                                                       --
-- ------------------------------------------------------------------------------------------------ --
-->
<footer class="apl-slayout-foot">
    <MasterLayoutFooter EnablePagination="true"
                        EnableRaafImg="false"
                        EnableCAEImg="false"
                        SlideWindowNumber="1" />
</footer>


<!--
-- ------------------------------------------------------------------------------------------------ --
-- CODE BASE                          </CascadingValue>                                             --
-- ------------------------------------------------------------------------------------------------ --
-->
@code
{
    /* -- Layout Parameters -- */

    protected override void OnInitialized()
    {
        base.OnInitialized();
        ApplicationData.StateChanged += StateHasChanged;
        CourseData.StateChanged += StateHasChanged;
    }

    MudTheme CustomTheme = new MudTheme()
    {
        Palette = new Palette()
        {

            Primary = "#ffffff",
            PrimaryDarken = "rgb(62,44,221)",
            PrimaryLighten = "rgb(118,106,231)",

            Dark = "#00224b",

            DarkContrastText = "000000",
            HoverOpacity = 0.5,

            Info = "#00224b",
            TableHover = "#cccccc",
            OverlayDark = "rgba(0, 34, 75, 0.4980392156862745)"
        },
    };
}
